<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_coffee_list"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#fdefdd"
tools:context="com.example.olga.caffemokka5.ContactActivity"
android:weightSum="1">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/new_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textStart"
        android:background="@android:color/transparent"
        android:textColor="#000"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:text="&lt;"
        android:onClick="contactReturnHomeClick" />

    <TextView
        android:text="Contact"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:textColor="#000"
        android:textSize="24sp" />

</RelativeLayout>

<ImageView
    android:layout_width="fill_parent"
    android:layout_height="186dp"
    android:scaleType="fitXY"
    android:adjustViewBounds="true"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:srcCompat="@drawable/map"
    android:id="@+id/imageView4"
    android:layout_weight="0.61" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/iconmap"
        android:layout_marginLeft="10dp"
        android:id="@+id/imageView5" />

    <TextView
        android:text="7456 Cartier, Montreal, QC, H2E 3S1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:layout_weight="0.74"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:textSize="18sp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/iconphone"
        android:layout_marginLeft="10dp"
        android:id="@+id/imageView6" />

    <TextView
        android:text="(+1) 514 - 436 - 2189"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv3"
        android:layout_weight="0.74"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/iconmail"
        android:layout_marginLeft="10dp"
        android:id="@+id/imageView7" />

    <TextView
        android:text="cafemokka@gmail.com"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv4"
        android:layout_weight="0.74"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp" />
</LinearLayout>


</LinearLayout>

