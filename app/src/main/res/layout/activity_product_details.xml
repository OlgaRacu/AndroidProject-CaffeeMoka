<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coffee_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fdefdd"
    android:padding="5dp"
    tools:context="com.example.olga.caffemokka5.ProductDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="30dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:text="&lt;"
            android:onClick="returnProductListClick" />

        <TextView
            android:text="Coffee"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetailsName"
            android:fontFamily="cursive"
            android:textColor="#000"
            android:textSize="32sp" />

        <Button
            android:text="10"
            android:textColor="#4f64c4"
            android:textSize="18dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/cart1"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:id="@+id/cart3"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="cartClick" />

    </RelativeLayout>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/ivDetails" />


    <TextView
        android:text="Product details"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/ivDetails"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        android:textColor="#000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/tvLongDescription"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Price :"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPriceLabel"
            android:layout_weight="1"
            android:textColor="#000"
            android:textAlignment="center"
            android:paddingBottom="30dp"
            android:textSize="26sp" />

        <TextView
        android:text="ID :"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvID"
        android:layout_weight="1"
        android:textColor="#000"
        android:textAlignment="center"
        android:paddingBottom="30dp"
        android:textSize="26sp" />

        <TextView
            android:text=""
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#006600"
            android:textSize="26sp" />

    </LinearLayout>

    <Button
        android:text="Add to Cart"
        android:layout_width="340dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="#be5815"
        android:layout_height="60dp"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edit_text_style"
        android:id="@+id/addToCart"
        android:onClick="addToCartClick" />


</LinearLayout>

