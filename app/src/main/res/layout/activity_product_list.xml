<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coffee_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fdefdd"
    tools:context="com.example.olga.caffemokka5.ProductListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/tvCategory"
            android:textColor="#000"
            android:textSize="26sp"

            />

        <Button
            android:id="@+id/new_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:background="@android:color/transparent"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:text="&lt;"
            android:onClick="returnCategoryClick" />

        <Button
            android:text="10"
            android:textColor="#2f48c1"
            android:textSize="18dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/cart1"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:id="@+id/cart2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="cartClick" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:layout_weight="1" />


</LinearLayout>



